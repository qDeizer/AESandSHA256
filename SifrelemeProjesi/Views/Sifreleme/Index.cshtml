<!DOCTYPE html>
<html>
<head>
    <title>Sifreleme ve Ozetleme</title>
</head>
<body>
    <h2>AES Sifreleme</h2>
    <form method="post" action="/Sifreleme/Sifrele">
        <label for="metin">Metin:</label>
        <input type="text" id="metin" name="metin" required />
        <label for="anahtar">Anahtar (32 karakter):</label>
        <input type="text" id="anahtar" name="anahtar" required />
        <button type="submit">Sifrele</button>
    </form>
    @if (ViewBag.SifreliMetin != null)
    {
        <p>Sifreli Metin: @ViewBag.SifreliMetin</p>
    }
    @if (ViewBag.Hata != null)
    {
        <p style="color: red;">@ViewBag.Hata</p>
    }

    <h2>AES Sifre Cozme</h2>
    <form method="post" action="/Sifreleme/SifreCoz">
        <label for="sifreliMetin">Sifreli Metin:</label>
        <input type="text" id="sifreliMetin" name="sifreliMetin" required />
        <label for="anahtar">Anahtar (32 karakter):</label>
        <input type="text" id="anahtar" name="anahtar" required />
        <button type="submit">Coz</button>
    </form>
    @if (ViewBag.CozulmusMetin != null)
    {
        <p>Cozulmus Metin: @ViewBag.CozulmusMetin</p>
    }
    @if (ViewBag.Hata != null)
    {
        <p style="color: red;">@ViewBag.Hata</p>
    }

    <h2>SHA256 Ozet</h2>
    <form method="post" action="/Sifreleme/OzetOlustur">
        <label for="veri">Veri:</label>
        <input type="text" id="veri" name="veri" required />
        <button type="submit">Ozet Olustur</button>
    </form>
    @if (ViewBag.Ozet != null)
    {
        <p>Ozet: @ViewBag.Ozet</p>
    }
    @if (ViewBag.Hata != null)
    {
        <p style="color: red;">@ViewBag.Hata</p>
    }
</body>
</html>